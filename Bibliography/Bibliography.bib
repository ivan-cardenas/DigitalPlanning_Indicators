  volume = {237},
  publisher = {Elsevier B.V.},
  address = {["School of Architecture, The Chinese University of Hong Kong, Hong Kong", "School of Geography, University College Dublin, Ireland", "Institute of Future Cities, The Chinese University of Hong, Kong, New Territories, Hong Kong", "Department of Building and Real Estate, The Hong Kong Polytechnic University, Hong Kong", "Research Institute for Smart Ageing, The Hong Kong Polytechnic University, Hong Kong", "Division of Landscape Architecture, Department of Architecture, Faculty of Architecture, The University of Hong Kong, Hong Kong", "Institute of Environment, Energy and Sustainability, The Chinese University of Hong Kong, New Territories, Hong Kong"]},
