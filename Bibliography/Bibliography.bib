  keywords = {climate effect,climate modeling,comparative study,computer simulation,decomposition analysis,extreme event,fire management,hazard assessment,heat wave,meteorological hazard,multivariate analysis,natural hazard,numerical model,relative humidity,temperature effect,weather forecasting},
