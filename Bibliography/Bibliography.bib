  publisher = {Elsevier Ltd},
  address = {["School of Ethnology and Sociology, Guangxi Minzu University, Guangxi, Nanning, 530006, China", "School of Economics, Guangxi Minzu University, Guangxi, Nanning, 530006, China", "School of Business, Guangxi University, Nanning, 530004, China", "School of Management, Guangxi Minzu University, Guangxi, Nanning, 530006, China"]},
