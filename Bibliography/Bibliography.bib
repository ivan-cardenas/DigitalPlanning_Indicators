@article{aboelngaAssessingWater20,
  title = {Assessing {{Water Security}} in {{Water-Scarce Cities}}: {{Applying}} the {{Integrated Urban Water Security Index}} ({{IUWSI}}) in {{Madaba}}, {{Jordan}}},
